{
    "manifest_version": 2,
    "name": "Tunnel",
    "version": "1.0",
    "description": "Wraps your Discord messages into a cozy Einstein-Rosen bridge.",
    "icons": {
      "48": "icons/tunnel_48.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "theme"
    ],
    "content_scripts": [
        {
            "matches": ["*://*.discord.com/*"],
            "js": ["scripts/discord_content.js"]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["scripts/discord_injected.js"],
        "matches": ["*://*.discord.com/*"]
    }],
        "browser_action": {
        "default_icon": "icons/tunnel_48.png",
        "default_title": "Tunnel",
        "default_popup": "popup/tunnel.html"
    }
}